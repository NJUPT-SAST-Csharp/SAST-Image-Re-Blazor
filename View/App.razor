<Microsoft.AspNetCore.Components.Authorization.CascadingAuthenticationState>
    <Toolbelt.Blazor.ViewTransition.ViewTransitionRouter AppAssembly="typeof(App).Assembly">
        <Found Context="routeData">
            <Microsoft.AspNetCore.Components.Authorization.AuthorizeRouteView RouteData="@routeData"
                DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </Microsoft.AspNetCore.Components.Authorization.AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <View.Pages.NotFound />
        </NotFound>
    </Toolbelt.Blazor.ViewTransition.ViewTransitionRouter>
</Microsoft.AspNetCore.Components.Authorization.CascadingAuthenticationState>
