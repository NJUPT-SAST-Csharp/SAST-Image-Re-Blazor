@using Controller
@using View.Misc
@inherits LayoutComponentBase

<MApp>
    <MNavigationDrawer App @bind-Value="drawer">

    </MNavigationDrawer>


    <MAppBar App HideOnScroll ScrollTarget="#main-content">
        <MAppBarNavIcon @onclick="() => drawer = !drawer" />
    </MAppBar>

    <MMain>
        <PEnqueuedSnackbars Position="@SnackPosition.TopRight" @ref="Snackbars.Ref"></PEnqueuedSnackbars>
        <MContainer Fluid Id="main-content">
            @Body
        </MContainer>
    </MMain>

</MApp>


@code {
    [Inject]
    public GlobalSnackbarsRef Snackbars { get; set; } = null!;
    private bool? drawer;
}